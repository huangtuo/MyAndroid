<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_dialog_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialog_error" />
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="#303030"/>
    </LinearLayout>


        <TextView
            android:id="@+id/contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/linear_dialog_title"
            android:maxLines="8"
            android:minHeight="50dp"
            android:minLines="2"
            android:text=""
            android:textColor="#4a4a4a"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/sureBut"
            android:layout_below="@+id/contentText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_background_bottom"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="确 定"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_white"
            android:textSize="16sp" />



</RelativeLayout>

